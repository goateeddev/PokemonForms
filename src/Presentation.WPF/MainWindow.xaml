<Window x:Class="Presentation.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation.WPF"
        xmlns:views="clr-namespace:Presentation.WPF.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Canvas Name="MainCanvas" Focusable="True" FocusVisualStyle="{x:Null}">
        <views:LandView x:Name="Landscape" Height="450" Width="450" Canvas.Left="175" Canvas.Top="17"/>
        <Border BorderThickness="1" BorderBrush="#444" Canvas.Left="175" Canvas.Top="480">
            <TextBlock Name="gameText" Height="50" Width="450" TextWrapping="WrapWithOverflow"/>
        </Border>
    </Canvas>
</Window>